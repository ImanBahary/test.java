pipeline {
    agent any

    tools {
        maven 'Maven 3.6.3' // Adjust to your Maven version
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-repo/java-app.git' // Replace with your repository URL
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Add your deployment steps here
            }
        }
    }
}
